import java.net.InetAddress;
import java.net.UnknownHostException;
import java.util.Scanner;

public class IPAddressFinder {
    public static void main(String[] args) {
        try {
           
            InetAddress localHost = InetAddress.getLocalHost();
            System.out.println("Your Computer's Hostname: " + localHost.getHostName());
            System.out.println("Your Computer's IP Address: " + localHost.getHostAddress());
            
            Scanner sc = new Scanner(System.in);
            System.out.print("\nEnter a domain name (e.g., www.google.com): ");
            String domain = sc.nextLine();
            
            System.out.println("\nIP addresses for domain: " + domain);
            InetAddress[] addresses = InetAddress.getAllByName(domain);
            
            for (InetAddress addr : addresses) {
                System.out.println(addr.getHostAddress());
            }
            
            sc.close();
        } catch (UnknownHostException e) {
            System.out.println("Error: Unable to resolve host. Please check the domain name.");
        } catch (Exception e) {
            System.out.println("An unexpected error occurred: " + e.getMessage());
        }
    }
}
